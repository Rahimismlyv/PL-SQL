/*Employees cədvəlinin kopyası olan emp_copy cədvəli yaradın.Əgər bu adda cədvəl varsa həmin cədvəl silinsin.Bu cədvəldə hər bir işçinin maaşını öz maaşının 1.5 misli ilə əvəz edin.*/
create or replace procedure pr_emp_copy is
	v_count number; --cedvelin olub olmamasin yoxlamaq uchun
	v_table_name varchar2(15) :='emp_copy';
begin
	select count(*) into v_count from all_tables where lower(table_name)=lower(v_table_name);
	if v_count>0 then execute immediate 'drop table '||v_table_name;
	end if;
	execute immediate 'create table '||v_table_name||' as select * from hr.employees';
	execute immediate 'update '||v_table_name||' set salary=salary*1.5 ';
end;
